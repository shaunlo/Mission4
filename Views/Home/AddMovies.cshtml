@*A separate page with a form to enter the movies*@
@{
    ViewData["Title"] = "Add Movie";
}
@model Mission4.Models.AddMovies
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="MovieName"> Movie Name:</label>
        <input asp-for="MovieName" />
        <br>
        <label asp-for="Rating"> Rating:</label>
        <select asp-for="Rating">
            <option value="">--</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br>
        <label asp-for="Edit"> Edit:</label>
        <select asp-for="Edit">
            <option value="">--</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <br>
        <label asp-for="LentTo"> Lent To:</label>
        <input asp-for="LentTo" />
        <br>
        <label asp-for="Notes"> Notes:</label>
        <input asp-for="Notes" />
        <br>
        <button type="submit">Submit</button>

    </form>
</div>